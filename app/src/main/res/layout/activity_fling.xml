<com.smallnew.pullflinglib.PullFlingLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/id_pullflinglayout_topview"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="240dp" >
        <ImageView
            android:id="@id/id_pullflinglayout_headview"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:src="@drawable/album"/>
    </RelativeLayout>

    <com.smallnew.pullfling.view.SimpleViewPagerIndicator
        android:id="@id/id_pullflinglayout_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffffff" >
    </com.smallnew.pullfling.view.SimpleViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@id/id_pullflinglayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44ccb7d9" >
    </android.support.v4.view.ViewPager>

</com.smallnew.pullflinglib.PullFlingLayout>